<Window x:Class="BiomentricoHolding.Views.MensajeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje"
        Height="Auto" Width="400" MaxWidth="450" MaxHeight="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f8f9fa"
        WindowStyle="None"
        AllowsTransparency="True"
        SizeToContent="Height">

    <Border CornerRadius="12" Background="White" BorderBrush="#dee2e6" BorderThickness="1" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

            <!-- Icono + Mensaje -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock x:Name="icono"
                           Text="🔔"
                           FontSize="32"
                           Foreground="SteelBlue"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBlock x:Name="txtMensaje"
           Text="Aquí va el mensaje"
           FontSize="16"
           FontWeight="SemiBold"
           TextAlignment="Left"
           TextWrapping="Wrap"
           Foreground="#212529"
           Width="280"
           MaxWidth="280"
           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="✔ Aceptar" Width="120" Margin="10,0" Click="BtnOK_Click"/>
                <Button x:Name="btnCancelar" Content="✖ Cancelar" Width="120" Margin="10,0" Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
