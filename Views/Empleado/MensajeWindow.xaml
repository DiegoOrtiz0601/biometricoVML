<Window x:Class="BiomentricoHolding.Views.MensajeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="txtMensaje"
                       Text="Aquí va el mensaje"
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="✔ Aceptar" Width="120" Margin="10,0" Click="BtnOK_Click"/>
                <Button x:Name="btnCancelar" Content="✖ Cancelar" Width="120" Margin="10,0" Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
