<Window x:Class="BiomentricoHolding.Views.Empleado.MiniLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiniLoginWindow"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid Background="Transparent">
        <Border Width="320" Padding="20"
                CornerRadius="12"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadow}">

            <Grid>
                <!-- Botón X arriba a la derecha -->
                <Button Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="25" Height="25"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#555"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnCerrar_Click"/>

                <StackPanel Margin="0,30,0,0">
                    <TextBlock Text="🔐 Acceso requerido"
                               FontWeight="Bold"
                               FontSize="18"
                               Foreground="#1F2937"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Usuario" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsuario"
                             Height="30"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Contraseña" Margin="0,5,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 VerticalContentAlignment="Center"
                                 Height="30"
                                 Margin="0,0,0,20"/>

                    <Button Content="Ingresar"
                            Height="35"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="BtnLogin_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>


