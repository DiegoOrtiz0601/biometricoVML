<Window x:Class="BiomentricoHolding.Views.Empleado.EmpleadoYaExisteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Empleado ya existe"
        Height="220" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Topmost="True">

    <Grid Background="#80000000">
        <!-- Fondo semitransparente -->
        <Border Background="White"
                CornerRadius="16"
                Padding="25"
                Width="380"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{DynamicResource DropShadow}"
                >

            <StackPanel>
                <!-- Encabezado -->
                <TextBlock Text="⚠️ Empleado ya registrado"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#c70100"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Mensaje -->
                <TextBlock x:Name="txtMensaje"
                           Text="El empleado ya existe.\n¿Qué deseas hacer?"
                           FontSize="14"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Foreground="#1F2937"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnModificar"
                            Content="✏️ Modificar"
                            Width="140"
                            Margin="0,0,10,0"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="BtnModificar_Click"/>

                    <Button x:Name="btnCerrar"
                            Content="❌ Cerrar"
                            Width="100"
                            Background="#E5E7EB"
                            Foreground="Black"
                            FontWeight="SemiBold"
                            Click="BtnCerrar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
