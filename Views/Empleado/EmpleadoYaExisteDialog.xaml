<Window x:Class="BiomentricoHolding.Views.Empleado.EmpleadoYaExisteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Empleado ya existe"
        Height="220" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Topmost="True">

    <Grid Background="#80000000">
        <!-- Fondo oscuro semitransparente -->
        <Border Background="White"
                CornerRadius="16"
                Padding="25"
                Width="380"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{DynamicResource DropShadow}">

            <StackPanel>
                <!-- Título -->
                <TextBlock Text="⚠️ Empleado ya registrado"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#c70100"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Mensaje -->
                <TextBlock x:Name="txtMensaje"
                           Text="El empleado ya existe.\n¿Qué deseas hacer?"
                           FontSize="14"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Foreground="#1F2937"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">

                    <!-- Botón Modificar -->
                    <Button x:Name="btnModificar"
                            Content="✏️ Modificar"
                            Width="140"
                            Height="35"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#680307"
                            Cursor="Hand"
                            Click="BtnModificar_Click"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#343a40"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Botón Cerrar -->
                    <Button x:Name="btnCerrar"
                            Content="❌ Cerrar"
                            Width="100"
                            Height="35"
                            FontWeight="Bold"
                            Background="#E5E7EB"
                            Foreground="#1F2937"
                            Cursor="Hand"
                            Click="BtnCerrar_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
