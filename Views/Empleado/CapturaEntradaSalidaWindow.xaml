<Window x:Class="BiomentricoHolding.Views.Empleado.CapturaEntradaSalidaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Entrada / Salida"
        WindowStartupLocation="CenterScreen"
        Width="720" Height="500"
        Background="#f8f9fa"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Reloj -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
        </Grid.RowDefinitions>

        <!-- Título con ícono -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <Image Source="/Recursos/icono_entrada_salida.png"
                   Width="32"
                   Height="32"
                   Margin="0,0,10,0"/>
            <TextBlock Text="Registro de Entrada y Salida"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#212529"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Reloj -->
        <!-- Reloj + Fecha -->
        <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,10,0,10">
            <TextBlock x:Name="txtReloj"
               FontSize="36"
               FontWeight="Bold"
               Foreground="#c70100"
               HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtFecha"
               FontSize="16"
               Foreground="Gray"
               HorizontalAlignment="Center"
               Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Contenedor principal horizontal: datos + huella -->
        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Panel de datos -->
            <StackPanel Grid.Column="0" Width="400" Margin="0,0,20,0">
                <TextBlock x:Name="txtEstadoHuella"
                           Text="Por favor coloque su dedo en el lector"
                           FontSize="18"
                           TextAlignment="Center"
                           Foreground="Gray"
                           Margin="0,10"/>

                <Border Background="White"
                        BorderBrush="#dee2e6"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,10">
                    <StackPanel>
                        <TextBlock x:Name="lblNombreEmpleado"
                                   Text="Nombre: ---"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBlock x:Name="lblDocumento"
                                   Text="Documento: ---"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBlock x:Name="lblTipoMarcacion"
                                   Text="Marcación: ---"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBlock x:Name="lblEstadoMarcacion"
                                   Text="Estado: ---"
                                   FontSize="16"
                                   Margin="0,5"
                                   Foreground="DarkGreen"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Imagen de huella -->
            <Border Grid.Column="1"
                    Width="200"
                    Height="240"
                    Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10"
                    VerticalAlignment="Center">
                <Image x:Name="imgHuella"
                       Width="180"
                       Height="220"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Botón reiniciar -->
        <Button Grid.Row="3"
                Content="Reiniciar Captura"
                Click="BtnReiniciar_Click"
                HorizontalAlignment="Center"
                Margin="0,10"
                Padding="12,6"
                Background="#c70100"
                Foreground="White"
                FontWeight="Bold"
                Width="200"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.FontWeight="Bold"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
