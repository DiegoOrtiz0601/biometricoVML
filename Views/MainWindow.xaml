<Window x:Class="BiomentricoHolding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Sistema Biométrico Holding"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="1000"
        Background="#F5F7FA"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="False">

    <Grid>
         <!--Definición de filas: Header | Contenido--> 
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

         <!--🟫 Encabezado personalizado oscuro--> 
        <Border Grid.Row="0"
                Background="#343a40"
                MouseDown="BarraTitulo_MouseDown">
            <DockPanel Margin="10,0" VerticalAlignment="Center">
                <TextBlock Text="🛡️  Sistema Biométrico Holding"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

         <!--🧭 Contenido principal: barra lateral + contenido dinámico--> 
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

             <!--Sidebar--> 
            <StackPanel Background="#680307" Grid.Column="0">
                <TextBlock Text="Control de Ingreso"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="20,30,20,10"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="VML Holding"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="10,0,20,10"
                           HorizontalAlignment="Center"/>
  
    <Separator Margin="10"/>

                 <!--Botones de navegación--> 
                <Button Content="📋 Registrar Empleado"
                        Click="BtnRegistrarEmpleado_Click"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="📌 Entradas/Salidas"
                        Click="BtnControlAcceso_Click"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="🗂 Consultar Registros"
                        Click="BtnConsultarRegistros_Click"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="⚙ Configuración"
                        Click="BtnConfiguracion_Click"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="🔒 Cerrar Sesión"
                        Click="BtnCerrarSesion_Click"
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,40,10,10"/>
            </StackPanel>

             <!--Zona dinámica de contenido (GIF + módulo cargado)--> 
            <Border Grid.Column="1" Background="White" Padding="20">
                <Grid>
                     <!--Imagen GIF bienvenida--> 
                    <Image x:Name="imgBienvenida"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                     <!--Área de contenido dinámico--> 
                    <ContentControl x:Name="MainContent"
                                    Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
