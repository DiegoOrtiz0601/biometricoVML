<Window x:Class="BiomentricoHolding.Views.Configuracion.BienvenidaInicialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenida"
        Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#FFF2F2F2"
        AllowsTransparency="True">

    <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#ccc" BorderThickness="1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="👋 Bienvenido al Sistema Biométrico"
                       FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Antes de comenzar, debe configurar el sistema seleccionando una sede y empresa."
                       FontSize="14" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button Content="Iniciar configuración"
                    Width="200" Height="40"
                    Background="#dc3545" Foreground="White"
                    FontWeight="Bold" Click="BtnIniciarConfiguracion_Click"
                    Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
