<Window x:Class="BiomentricoHolding.Views.Configuracion.SeleccionEmpresaSedeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SeleccionEmpresaSedeWindow"
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid Background="Transparent">
        <Border Width="320" Padding="20"
                CornerRadius="12"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadow}">

            <Grid>
                <!-- Botón cerrar -->
                <Button Content="✕"
                        Width="28" Height="28"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#1F2937"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Cursor="Hand"
                        ToolTip="Cerrar"
                        Click="BtnCerrar_Click"/>

                <!-- Contenido -->
                <StackPanel Margin="0,30,0,0">

                    <TextBlock Text="🏢 Configuración Inicial"
                               FontWeight="Bold"
                               FontSize="18"
                               Foreground="#1F2937"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- Empresa -->
                    <TextBlock Text="Empresa" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbEmpresas"
                              Height="32"
                              Padding="8,0"
                              Margin="0,0,0,10"
                              Background="#F3F4F6"
                              BorderThickness="1"
                              BorderBrush="#CBD5E1"
                              SelectionChanged="cmbEmpresas_SelectionChanged"/>

                    <!-- Sede -->
                    <TextBlock Text="Sede" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbSedes"
                              Height="32"
                              Padding="8,0"
                              Margin="0,0,0,20"
                              Background="#F3F4F6"
                              BorderThickness="1"
                              BorderBrush="#CBD5E1"/>

                    <!-- Botón guardar -->
                    <Button Content="💾 Guardar"
                            Height="36"
                            Background="#680307"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="BtnGuardar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#343a40"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
