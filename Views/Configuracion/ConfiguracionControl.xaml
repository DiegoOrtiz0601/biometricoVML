<UserControl x:Class="BiomentricoHolding.Views.Configuracion.ConfiguracionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BiomentricoHolding.Views.Configuracion"
             Background="#FFF2F2F2">

    <UserControl.Resources>
        <!-- Estilo de botón redondeado -->
        <Style x:Key="BotonRojoRedondeado" TargetType="Button">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#212529"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DropShadowEffect x:Key="DropShadow"
                  Color="Black"
                  Direction="270"
                  ShadowDepth="4"
                  BlurRadius="12"
                  Opacity="0.4"/>
    </UserControl.Resources>

    <!-- Contenedor único -->
    <Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Background="White" Margin="10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <DockPanel Background="#343a40" Height="40" VerticalAlignment="Top">
                    <TextBlock Text="⚙ Configuración del Sistema" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                </DockPanel>

                <!-- Selección de sede -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,20,0,10">
                    <TextBlock Text="Sede actual:" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbSedes" Width="300" Height="30" FontSize="14"/>
                    <Button Style="{StaticResource BotonRojoRedondeado}" Click="BtnGuardarSede_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" Margin="0,0,5,0"/>
                            <TextBlock Text="Guardar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Log del sistema -->
                <GroupBox Grid.Row="2" Header="Log del Sistema" FontWeight="SemiBold" FontSize="13">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="txtLog"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Background="#f8f9fa"
                                 BorderThickness="0"
                                 Padding="10"/>
                    </ScrollViewer>
                </GroupBox>

                <!-- Botones -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Style="{StaticResource BotonRojoRedondeado}" Click="BtnDescargarLog_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE896;" Margin="0,0,5,0"/>
                            <TextBlock Text="Descargar Log"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource BotonRojoRedondeado}" Click="BtnSalir_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" Margin="0,0,5,0"/>
                            <TextBlock Text="Salir"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource BotonRojoRedondeado}" Click="BtnLimpiarLog_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,5,0"/>
                            <TextBlock Text="Limpiar Log"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TOAST NOTIFICACIÓN -->
        <Grid x:Name="ToastContainer"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Center"
              Margin="0,0,0,20"
              Visibility="Collapsed"
              Panel.ZIndex="1000">
            <Border Background="#28a745"
                    CornerRadius="6"
                    Padding="10,6"
                    Effect="{DynamicResource DropShadow}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✔"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,6,0"/>
                    <TextBlock x:Name="ToastMessage"
                               FontSize="14"
                               Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
