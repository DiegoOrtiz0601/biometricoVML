		</Reference>
		<Reference Include="DPFPShrNET">
			<HintPath>Libs\DigitalPersona\DPFPShrNET.dll</HintPath>
			<Private>True</Private>
		</Reference>
	</ItemGroup>
	<ItemGroup>
	  <Content Include="Assets\logo.gif">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
